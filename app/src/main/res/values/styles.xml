<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="toolbarStyle">@style/NoSpaceActionBarTheme</item>
        <item name="autoCompleteTextViewStyle">@style/AppAutoCompleteTextView</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:windowBackground">@color/bg_window</item>
    </style>

    <!--toolbar样式-->
    <style name="ToolbarTheme">
        <!--the text color displaying the name of your activity, which is the primary text of the toolbar.-->
        <!--标题的颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--the text color for subtitle and more options (3 dot) button. -->
        <!--(Yes, it changed its color according to this property!)-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--the color for all other text including the menu.-->
        <!--下拉menu文字的颜色-->
        <item name="android:textColor">@android:color/white</item>
        <!--menu下拉样式-->
        <item name="actionOverflowMenuStyle">@style/myActionOverflowMenuStyle</item>
        <!--menu文字颜色，不能加android:-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!--Navigation Icon的颜色-->
        <item name="drawerArrowStyle">@style/myDrawerArrowStyle</item>
    </style>

    <!--menu下拉样式-->
    <style name="myActionOverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
    </style>

    <!--Navigation Icon的颜色-->
    <style name="myDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="NoSpaceActionBarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!--修改searchView字体颜色、大小-->
    <style name="AppAutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAppearance">@style/AutoCompleteTextAppearance</item>
    </style>

    <style name="AutoCompleteTextAppearance" parent="android:TextAppearance">
        <item name="android:textColorHint">@color/text_color_6</item>
        <item name="android:textColorHighlight">@color/text_color_6</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--主页面-->
    <style name="SideMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SideMenu.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/zz_bg_list_selector</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SideMenu.ItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="SideMenu.ItemLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SideMenu.ItemName">
        <item name="android:textColor">@color/text_color_9</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--用户信息-->
    <style name="Account">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Account.Classification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/zz_divider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="Account.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/zz_bg_list_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="Account.ItemName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Account.ItemTips">
        <item name="android:textColor">@color/text_color_6</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Account.ItemValue">
        <item name="android:textColor">@color/text_color_6</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--设置页面-->
    <style name="Settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Settings.Classification">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/zz_divider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="Settings.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/zz_bg_list_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="Settings.ItemName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Settings.ItemTips">
        <item name="android:textColor">@color/text_color_6</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Settings.ItemValue">
        <item name="android:textColor">@color/text_color_6</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--登录-->
    <style name="Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Login.EditText">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Login.Button">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Login.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_6</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--重置密码-->
    <style name="RetrievePassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RetrievePassword.EditText">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="RetrievePassword.Button">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
